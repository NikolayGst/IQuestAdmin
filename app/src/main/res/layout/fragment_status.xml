<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zone.iquestadmin.Fragment.StatusFragment">


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text=""
        android:textColor="#222"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtSeance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDate"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="#222"
        android:textSize="20sp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/txtSeance"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greyLine"/>

    <TextView
        android:id="@+id/nameClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_margin="8dp"
        android:text="ФИО: -"
        android:textColor="#222"
        android:textSize="20sp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/nameClient"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greyLine"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_margin="8dp"
        android:text="Email: -"
        android:textColor="#222"
        android:textSize="20sp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/email"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greyLine"/>

    <RelativeLayout
        android:layout_below="@id/view3"
        android:id="@+id/rltTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:text="Телефон: -"
        android:textColor="#222"
        android:textSize="20sp"/>
        <ImageView
            android:id="@+id/imgCall"
            android:src="@drawable/call"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/rltTel"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/greyLine"/>

    <Button
        android:id="@+id/btnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/greenText"
        android:text="Сменить статус"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</RelativeLayout>
